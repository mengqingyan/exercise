<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.revencoft.sample.dao.account.UserDao" > 
	<!-- Result Map-->
	<resultMap id="UserMap" type="com.revencoft.sample.entity.User" >
		<result property="loginName" column="login_name" />
		<result property="name" column="name" />
		<result property="password" column="password" />
		<result property="salt" column="salt" />
		<result property="roles" column="roles" />
		<result property="registerDate" column="register_date" />
		<result property="id" column="id" />
	</resultMap>
       
<!-- sys_menu_btn table all fields -->
<sql id="User_Column_List" >
	 id,login_name,name,password,salt,roles,register_date
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
	where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and id =  #{id}
	</if>
	<if test="loginName != null and loginName != ''" >
	    and login_name =  #{loginName}
	</if>
	<if test="name != null and name != ''" >
	    and name =  #{name}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="insert" parameterType="com.revencoft.sample.entity.User" useGeneratedKeys="true" keyProperty="id">
  insert into ss_user (login_name,name,password,salt,roles,register_date) 
  values(#{loginName}, #{name}, #{password}, #{salt}, #{roles}, #{registerDate})
</insert>

 
<!-- 根据loginName查询 -->
<select id="findUserByLoginName"  resultMap="UserMap" parameterType="string" >
	select * 
	 from ss_user where login_name = #{loginName}
</select>

<!-- 根据id查询 -->
<select id="findUserById"  resultMap="UserMap" parameterType="int">
	select <include refid="User_Column_List" /> 
	 from ss_user where id = #{id}
</select>

</mapper>   
